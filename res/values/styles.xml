<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="card">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/bg_card</item>
    </style>

    <style name="cardImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:onClick">oneDrink</item>
        <item name="android:contentDescription">@string/drinkOne</item>
        <item name="android:src">@drawable/shot_blue</item>
    </style>

    <style name="cardImageFinish">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:onClick">finishDrink</item>
        <item name="android:contentDescription">@string/finishDrink</item>
        <item name="android:src">@drawable/drink</item>
    </style>

    <style name="cardText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- TABLET STYLES BELOW -->

    <style name="cardTb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_card</item>
    </style>

    <style name="cardImageTb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:onClick">oneDrink</item>
        <item name="android:background">#00A4D2</item>
        <item name="android:contentDescription">@string/drinkOne</item>
        <item name="android:src">@drawable/shot_blue</item>
    </style>

    <style name="cardImageFinishTb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:onClick">finishDrink</item>
        <item name="android:background">#FFCC33</item>
        <item name="android:contentDescription">@string/finishDrink</item>
        <item name="android:src">@drawable/drink</item>
    </style>

    <style name="cardTextTb">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>